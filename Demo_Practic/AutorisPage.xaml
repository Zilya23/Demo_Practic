<Page x:Class="Demo_Practic.AutorisPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demo_Practic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutorisPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Авторизация" FontSize="36"  HorizontalAlignment="Center" VerticalAlignment="Top" Grid.ColumnSpan="1" Foreground="Black" FontFamily="Rockwell Condensed"/>
        <PasswordBox x:Name="txt_password" Width="300" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center"  Grid.Row="1" Background="White"/>
        <Button Content="log in"  HorizontalAlignment="Center" Width="90" Height="30" Grid.Row="3" FontFamily="Rockwell Condensed" Click="BTN_Login_Click" />
    </Grid>
</Page>
